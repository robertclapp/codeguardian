# CodeGuardian Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-change-in-production-min-32-chars

# Database Configuration
POSTGRES_PASSWORD=changeme123-use-strong-password
DATABASE_URL=postgresql://codeguardian:${POSTGRES_PASSWORD}@postgres:5432/codeguardian

# Redis Configuration
REDIS_PASSWORD=changeme123-use-strong-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
RATE_LIMIT=100 per hour

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Grafana Configuration
GRAFANA_PASSWORD=admin123-change-in-production

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_GITHUB_OAUTH=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_METRICS=true

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

